<Window x:Class="KeyboardSpeedSimulator.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Statistics" Height="250" Width="350" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Run x:Name="TotalCharsLabel" Text="Total chars: "/>
            <LineBreak/>
            <Run x:Name="TotalWordsLabel" Text="Total words: "/>
            <LineBreak/>
            <Run x:Name="TotalMistakesLabel" Text="Total mistakes: "/>
            <LineBreak/>
            <Run x:Name="TotalLinesLabel" Text="Total lines: "/>
            <LineBreak/>
            <Run x:Name="TotalTimeLabel" Text="Total time: "/>
        </TextBlock>
        <Button Style="{DynamicResource ButtonStyle1}" Click="ResetButton_Click" Content="Reset" HorizontalAlignment="Center" Margin="15"/>
    </StackPanel>
</Window>